{
    "builders": [{
        "type": "azure-arm",
        "tenant_id": "{{user `var_tenant_id`}}",
        "subscription_id": "{{user `var_subscription_id`}}",
        "client_id": "{{user `var_client_id`}}",
        "client_secret": "{{user `var_client_secret`}}",

        "os_type": "Linux",
        "image_publisher": "Canonical",
        "image_offer": "UbuntuServer",
        "image_sku": "18_04-lts-gen2",
        "image_version": "18.04.202102240",

        "managed_image_resource_group_name": "{{user `var_resource_group`}}",
        "managed_image_name": "{{user `var_imgdef`}}",
        "shared_image_gallery_destination": {
            "subscription": "{{user `var_subscription_id`}}",
            "resource_group": "{{user `var_resource_group`}}",
            "gallery_name": "{{user `var_gallery`}}",
            "image_name": "{{user `var_imgdef`}}",
            "image_version": "{{user `var_imgver`}}",
            "replication_regions": ["SouthCentralUS"]
        },

        "vm_size": "Standard_HB120rs_v2",
        "managed_image_storage_account_type": "Premium_LRS",
        "ssh_pty": "true",
        "build_resource_group_name": "{{user `var_resource_group`}}"
    }],
    "provisioners": [
	{
	    "type": "file",
        "source": "ubuntu-18.04-hpc",
        "destination": "/tmp"
	},
	{
        "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
        "inline": [
           "chmod +x /tmp/ubuntu-18.04-hpc/*.sh",
           "/tmp/ubuntu-18.04-hpc/install_utils.sh",
           "/tmp/ubuntu-18.04-hpc/install_mellanoxofed.sh",
           "/tmp/ubuntu-18.04-hpc/install_hpcx.sh",
           "/tmp/ubuntu-18.04-hpc/install_hpcdiag.sh",
           "/tmp/ubuntu-18.04-hpc/hpc-tuning.sh",
           "/tmp/ubuntu-18.04-hpc/network-tuning.sh",
	       "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
        ],
        "inline_shebang": "/bin/sh -x",
        "type": "shell",
        "skip_clean": true
	}
    ]
}
